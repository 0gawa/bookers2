<div class='container px-5 px-sm-0'>
  <div class='row'>
    <h2>Books search for "<%=@tag.name%>"</h2>

    <table class='table table-hover table-inverse'>
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th>Tag</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
            <tr>
                <td><%= link_to(book.user) do %>
                <%= image_tag book.user.get_profile_image(80,80) %>
                <% end %>
                </td>
                <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
                <td><%= book.body %></td>
                <td>
                    <% book.tags.each do |tag| %>
                    <%=link_to tag.name, search_path(name: tag.name)%>
                    <%end%>
                </td>
                <td class="favorite-<%= book.id%>" >
                    <%= render "favorites/btn", book: book %>
                </td>
                <td><%= render "book_comments/counter", book: book %></td>
                <td>閲覧数<%=book.view_count%>回</td>
                <td><%= render "layouts/static_star", book: book %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
  </div>
</div>