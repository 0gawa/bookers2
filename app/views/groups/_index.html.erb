<table class='table'>
  <thead>
    <tr>
      <th>グループアイコン</th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th><th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |g| %>
      <tr>
        <td><%= image_tag g.get_group_image(80,80) %></td>
        <td><%= g.name %></td>
        <td><%= g.introduction%></td>
        <td>
        <% if g.is_owned_by?(current_user) %>
            <%= link_to 'Edit', edit_group_path(g.id), class: "btn btn-success" %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>