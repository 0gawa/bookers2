<div class='container px-5 px-sm-0'>
    <div class='row'>
        <div class='col-10 offset-1'>
            <h3>Event Mail</h3>

            <%= form_with url: group_send_notice_mail_path(@group.id), method: :post, local: true do |f| %>
                <div class="form-group">
                    <%= f.label "Title" %>
                    <%= f.text_field :title, class: 'form-control' %>
                </div>

                <div class="form-group mt-2">
                    <%= f.label "Content" %>
                    <%= f.text_area :content, class: 'form-control' %>
                </div>

                <div class="form-group mt-2">
                    <%= f.submit "Update Group", class: 'btn btn-success' %>
                </div>
            <% end %>
        </div>
    </div>
</div>